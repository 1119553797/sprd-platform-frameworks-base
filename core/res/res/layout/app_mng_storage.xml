<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/LinerLayout_Top"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="#FFFFFF"
    	>

    			<TextView
    			android:text="@string/myAppTip"
    			android:id="@+id/myAppTip_Id"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_gravity="center_vertical"
    			android:layout_marginLeft="5dip"
    			android:textAppearance="?android:attr/textAppearanceMedium"
    			android:textColor="#000000"
    			android:layout_weight="1"
				>
    			</TextView>
    			<Button
    			android:text="@string/myApp_Start_Btn"
    			android:textColor="#FFFFFF"
    			android:id="@+id/myApp_Start_Btn_Id"
    			android:layout_width="64dip"
    			android:layout_height="wrap_content"
    			android:layout_marginRight="5dip"
    			android:layout_marginTop="4dip"
    			android:layout_marginBottom="4dip"
    			android:background="@drawable/shw_start"
    			>
    			</Button>

    	</LinearLayout>
    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	>
			<ListView xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/myApp_List"
			>
			</ListView>
		</LinearLayout>

</LinearLayout>
