<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shw_bg"
    >

    <TextView
    	android:text="@string/Low_Memory_Alert"
    	android:id="@+id/Low_Memory_Alert"
    	android:gravity="center_horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="20dip"
    	android:paddingLeft="20dip"
    	android:paddingRight="20dip"
    	/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/layout_status_bar"
	    android:orientation="vertical"
	    android:layout_width="40dip"
	    android:layout_height="match_parent"
	    >

	    <TextView
		android:id="@+id/Image_Free_Id"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:background="@drawable/shw_other">
		</TextView>
		<TextView
		android:id="@+id/Image_Application_Id"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:background="@drawable/shw_applications">
		</TextView>
		<TextView
		android:id="@+id/Image_Mail_Id"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:background="@drawable/shw_mail">
		</TextView>
		<TextView
		android:id="@+id/Image_Sms_Mms_Id"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:background="@drawable/shw_sms_mms">
		</TextView>
		<TextView
		android:id="@+id/Image_System_Id"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:background="@drawable/shw_system">
		</TextView>
        </LinearLayout>

		<TableLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:collapseColumns="3"
		android:paddingRight="20dip"
		>

			<TableRow
			android:id="@+id/Free_Row"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>
				<TextView
				android:text="@string/Low_Memory_Free"
				android:id="@+id/Low_Memory_Free_Id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/shw_other_text_bg"
				android:textColor="#722d87"
				>
				</TextView>
			</TableRow>

			<TableRow
			android:id="@+id/Application_Row"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shw_applications_text_bg"
			>

				<TextView
				android:text="@string/Low_Memory_Application"
				android:id="@+id/Low_Memory_Application_Id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#2e4a1a"
				>
				</TextView>
				<Button
				android:text="@string/Btn_Select_Clear"
				android:id="@+id/Application_Manage_Button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>
				</Button>
			</TableRow>

			<TableRow
			android:id="@+id/Mail_Row"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shw_mail_text_bg"
			>
				<TextView
				android:text="@string/Low_Memory_Mail"
				android:id="@+id/Low_Memory_Mail_Id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#510f00"
				>
				</TextView>
				<Button
				android:text="@string/Btn_Select_Clear"
				android:id="@+id/Mail_Manage_Button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>
				</Button>
			</TableRow>

			<TableRow
			android:id="@+id/Sms_Mms_Row"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shw_sms_mms_text_bg"
			>
				<TextView
				android:text="@string/Low_Memory_Sms_Mms"
				android:id="@+id/Low_Memory_Sms_Mms_Id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#64280a"
				>
				</TextView>
				<Button
				android:text="@string/Btn_Select_Clear"
				android:id="@+id/Sms_Mms_Button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>
				</Button>
			</TableRow>

			<TableRow
			android:id="@+id/System_Row"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>
				<TextView
				android:text="@string/Low_Memory_System"
				android:id="@+id/Low_Memory_System_Id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/shw_system_text_bg"
				android:textColor="#05357e"
				>
				</TextView>
			</TableRow>

		</TableLayout>
	</LinearLayout>

</LinearLayout>
