<!-- This is the screen that shows the 9 circle unlock widget and instructs
     the user how to unlock their device, or make an emergency call.  This
     is the portrait layout.  -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <LinearLayout
        android:id="@+id/spread_week_date_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="12dip"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/spread_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/spread_date_size"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/spread_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/spread_date_size"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <!-- Column 0: Time, date and status -->
    <com.android.internal.widget.DigitalClock android:id="@+id/spread_time"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="12dip"
        android:layout_marginLeft="30dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/spread_week_date_area"
        >

        <!-- Because we can't have multi-tone fonts, we render two TextViews, one on
        top of the other. Hence the redundant layout... -->
        <TextView android:id="@+id/timeDisplayBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="none"
            android:textSize="@dimen/spread_time_size"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            />

        <TextView android:id="@+id/timeDisplayForeground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="none"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:textSize="@dimen/spread_time_size"
            android:layout_alignLeft="@id/timeDisplayBackground"
            android:layout_alignTop="@id/timeDisplayBackground"
            />

    </com.android.internal.widget.DigitalClock>

</RelativeLayout>
