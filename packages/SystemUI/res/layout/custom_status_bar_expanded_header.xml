<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_default_status_expanded_bg"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:baselineAligned="false"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_status_bar_expanded_bg_sprd"
        >
        <com.android.systemui.statusbar.policy.CustomClock
            android:id="@+id/custom_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:paddingLeft="6dip"
            android:textSize="24sp"
            android:textColor="@drawable/custom_default_text_color"
            />
        <com.android.systemui.statusbar.policy.CustomDateView
            android:id="@+id/custom_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_clock"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:paddingLeft="6dip"
            android:paddingBottom="3dip"
            android:textSize="12sp"
            android:textColor="@drawable/custom_default_text_color"
            />
        <ImageView android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:src="@drawable/ic_notify_quicksettings"
            android:contentDescription="@string/accessibility_settings_button"
            />
    </RelativeLayout>
    <include android:id="@+id/status_bar_qucik_switch" layout="@layout/status_bar_quick_switch_layout" />
    <RelativeLayout android:id="@+id/carriergroup" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:background="@drawable/custom_default_status_expanded_bg" >
            <include android:id="@+id/custom_status_bar_expanded_double_sim"
                layout="@layout/custom_status_bar_expanded_double_sim_layout"
                android:gravity="center_vertical|left"/>
            <ImageView android:id="@+id/clear_all_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:src="@drawable/custom_notify_clear"
                android:contentDescription="@string/accessibility_clear_all"
                />
    </RelativeLayout>
</LinearLayout>
