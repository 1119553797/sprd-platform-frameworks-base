<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notification_panel_header_height"
    android:background="@drawable/custom_default_status_expanded_bg"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:baselineAligned="false" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_status_bar_expanded_bg_sprd" >
        <com.sprd.systemui.CustomClock
            android:id="@+id/custom_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:paddingLeft="6dip"
            android:textSize="24sp"
            android:textColor="@drawable/custom_default_text_color" />
        <com.sprd.systemui.CustomDateView
            android:id="@+id/custom_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_clock"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:paddingLeft="6dip"
            android:paddingBottom="3dip"
            android:textSize="12sp"
            android:textColor="@drawable/custom_default_text_color" />
        <FrameLayout android:id="@+id/settings_button_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" >
            <ImageView android:id="@+id/settings_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/ic_notify_settings"
                android:background="@drawable/ic_notify_button_bg"
                android:contentDescription="@string/accessibility_desc_quick_settings" />
            <ImageView android:id="@+id/notification_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@drawable/ic_notifications"
                android:background="@drawable/ic_notify_button_bg"
                android:visibility="gone"
                android:contentDescription="@string/accessibility_notifications_button" />
        </FrameLayout>
        <TextView
            android:id="@+id/header_debug_info"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/settings_button"
            android:fontFamily="sans-serif-condensed"
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="#00A040"
            android:padding="2dp" />
    </RelativeLayout>
    
