<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/quick_operation_item_bg_action"
    android:orientation="vertical"
    android:gravity="center_horizontal"
     >
    <ImageView
        android:id="@+id/quick_operation_wifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quick_operation_wifi_off"
        android:layout_marginTop="10dip" />
    <TextView
        android:id="@+id/quick_operation_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_name"
        android:textColor="#ffffffff" />

    <ImageView
        android:id="@+id/quick_operation_wifi_bottom_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar_icon_off" />
</LinearLayout>